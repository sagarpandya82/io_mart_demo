<p style="color: green"><%= notice %></p>

<h1> Event details</h1>
<%= render @event %>

<div>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
  <%= link_to "Back to events", events_path %>

  <%= button_to "Destroy this event", @event, method: :delete %>
</div>

<hr>

<h3> Comments </h3>

<%= link_to 'new comment', new_comment_path(:event_id => @event.id) %>
<br>

<% @event.comments.each do |comment| %>
  <br>
  <%= comment.created_at %><br>
  <%= comment.content %><br>
  <%= link_to "Edit this comment", edit_comment_path(comment, :event_id => @event.id) %> |
  <%= button_to "Destroy this comment", comment, method: :delete, :event_id => @event.id %>

  <p>----</p>
<% end %>
