<p style="color: green"><%= notice %></p>

<%= link_to "New event", new_event_path %>
<br>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <b><%= "Status: #{event.status.name}" %></b>
    <p>
      <%= link_to "Show this event", event %>
    </p>
    <hr>
  <% end %>
</div>


